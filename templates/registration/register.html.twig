{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container py-5">

    <div class="row">
    
        <div class="col-12 ">
            <a class="btn btn-secondary" href="{{ path('app_login') }}">Déja un compte ? Se connecter</a>
        </div>

        <div class="col-sm-12 mt-3">
          <div class="card border-dark mb-3" style="background-color: #f3eaea">
                <div class="card-header">
                    <h5 class="card-title">Créer un compte</h5>
                </div>
                <div class="card-body text-dark">
                     {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.name) }}
                        {{ form_row(registrationForm.telephone) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword) }}
                        {{ form_row(registrationForm.agreeTerms) }}

                        <button type="submit" class="btn btn-outline-dark w-100">S'inscrire</button>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>

    </div>
  </div>

{% endblock %}
{% extends "base.html.twig" %}

{% block body %}

  <section>
      <div class="container py-5">
        <div class="row">
         <div class="col-12 ">
            <a class="btn btn-outline-dark w-100" href="{{ path('customer_category_index') }}">Revenir aux catégories</a>
            <a class="btn btn-outline-dark w-100" href="{{ path('home') }}">Revenir à l'acceuil</a>
        </div>

              {% include "_messages_flash.html.twig" %}

            <div class="col-sm-12 col-md-6">

                   <div class="card bg-dark">
                    <img src="{{ product.imagePath }}" class="card-img imageDetailProduct" alt="image_category">
                </div>
            
            </div>
            <div class="col-sm-12 col-md-6">

                <div class="card bg-dark text-dark">
                    <div class="card-img-overlay">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p>{{ product.price | priceEuro }}</p>
                        <a href="{{ path('cart_add',{ 'id' : product.id } ) }}" class="btn btn-outline-dark w-100">Ajouter au panier</a>
                    </div>
                </div>
            
            </div>

        </div>
    </div>

  </section>

   <section>
   <hr>
    <div class="container py-5">
        <div class="row">
            <div class="col-12">
                <h3 class="text-center">Suggestions</h3>
            </div>  

            {% for product in suggestedProducts %}

                <div class="col-sm-12 col-md-6 col-lg-3 mt-3">

                      <div class="card bg-dark text-white">
                        <img src="{{ product.imagePath }}" class="card-img imageCard" alt="image_category">
                        <div class="card-img-overlay">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p>{{ product.price | priceEuro }}</p>
                            <a href="{{ path('boutique_product_detail',{'id': product.id} ) }}" class="btn btn-outline-light w-100">Consulter</a>
                        </div>
                    </div>
            
                </div>
                
            {% endfor %}

        </div>
    </div>
  </section>

{% endblock %}
{% extends "base.html.twig" %}

{% block body %}

    <section>
        <div class="container py-5">
            <div class="row">
                <div class="col-12 mb-3">
                    <h3 class="text-center">Mes commandes</h3>
                </div>
                {% include "_messages_flash.html.twig" %}
                 {% if purchases | length > 0 %}
                <div class="col-12 mb-3">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#id</th>
                                <th scope="col">date</th>
                                <th scope="col">Total</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            {% for item in purchases %}
                                <tr>
                                    <th>
                                        {{ item.id }}
                                    </th>
                                    <td>{{ item.createdAt | date('d-M-Y') }}</td>
                                    <td>
                                        {{ item.invoice.total | priceEuro }}
                                    </td>
                                    <td>
                                    <a href="{{ path('profile_purchase_show',{'id': item.id}) }}" class="btn btn-primary"><i class="fas fa-eye"></i> Consulter</a>
                                    </td>
                                </tr>
                        </tbody>
                    </table>
                                   {% endfor %}
                            
                {% else %}

                                    <p>Vous n'avez pas de tickets de caisse pour le moment</p>

                                         <div class="col-12 ">
            <a class="btn btn-dark" href="{{ path('profile_detail') }}">Revenir au profil</a>
            <a class="btn btn-dark" href="{{ path('home') }}">Revenir Ã  l'acceuil</a>
        </div>

                {% endif %} 
                </div>
            </div>
        </div>
    </section>

{% endblock %}
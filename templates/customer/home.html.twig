{% extends "base.html.twig" %}

{% block body %}

<body class="w3-light-grey" >

<div class="w3-main" style="margin-left:300px">
<h2> Les catégories </h2>

          {% for category in categories %}

  <div class="w3-row-padding">
     <div class="w3-third w3-container w3-margin-bottom">
        <img src="{{ category.imagePath }}" alt="Alps" style="width:100%" >
          <div class="w3-container w3-center w3-white">
                <div class="w3-center">
            <div class="w3-bar">
            <a href="{{ path('boutique_product_show_by_category',{'id': category.id}) }}" class="w3-button w3-black">Consulter</a>
            </div>
            </div>
          </div>
      </div>
  </div>
              
          {% endfor %}


<div class="w3-main" style="margin-left:300px">
<h2> Les nouveautés</h2>

        {% for product in products %}

    <div class="w3-row-padding">
     <div class="w3-third w3-container w3-margin-bottom">
        <img src="{{ product.imagePath }}" alt="Alps" style="width:100%" >
          <div class="w3-container w3-center w3-white">
              <div class="w3-center">
                <div class="w3-bar">
                  <h5 class="card-title">{{ product.name }}</h5>
                    <p>{{ product.price | priceEuro }}</p>
                    <a href="{{ path('boutique_product_detail',{'id': product.id} ) }}" class="btn btn-primary w-100">Consulter</a>
                </div>
              </div>
          </div>
      </div>
  </div>
            
        {% endfor %}


{% endblock %}
{% extends "base.html.twig" %}

{% block body %}

  <section class="bg">
    <div class="container py-5">
    <div class="row">

          <a id="haut"></a>
           <a class="btn btn-outline-dark" href="mailto:amelie.factory@outlook.fr">Pour toute commande, c'est ici</a>
      
          <div class="col-12">
            <h3 class="text-center">Les nouveautés</h3>
          </div>  
          <hr>
          
                 {% for product in products %}

            <div class="col-sm-12 col-lg-4 mt-3">
              
             <div class="card bg-dark text-white">
                    <img src="{{ product.imagePath }}" class="card-img" alt="image_category">
                  <div class="card-img-overlay">
                
                    </div>
                </div>
                   <h5 class="card-title">{{ product.name }}</h5>
                        <p>{{ product.price | priceEuro }}</p>
                        <a href="{{ path('boutique_product_detail',{'id': product.id} ) }}" class="btn btn-outline-dark btn-lg w-100">Consulter</a>
            </div>
              
            
        {% endfor %}

      </div>
    </div>
  </section>

  <section>
  <div class="container py-5">
      <div class="row">
        <div class="col-12">
          <h3 class="text-center">Les catégories</h3>
        </div>  
        <hr>

  {% for category in categories %}
     
              <div class="col-sm-12 col-lg-4 mt-3">

                 <div class="card bg-dark text-white">
                      <img src="{{ category.imagePath }}" class="card-img" alt="image_category">
                      <div class="card-img-overlay">
                    
                      </div>
                  </div>
                <h5 class="card-title">{{ category.name }}</h5>
                          <a href="{{ path('boutique_product_show_by_category',{'id': category.id}) }}" class="btn btn-outline-dark w-100">Consulter</a>
              </div>
              
          {% endfor %}
    </div>
     </div>
  </section>

  
   


{% endblock %}
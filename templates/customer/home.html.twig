{% extends "base.html.twig" %}

{% block body %}

  <section class="bg">
    <div class="container py-5">
    <div class="row">
          <div class="col-12">
            <h3 class="text-center">Catégories</h3>
          </div>  
          <hr>

          {% for category in categories %}

              <div class="col-sm-12 col-lg-4 mt-3">

                 <div class="card bg-dark text-white">
                      <img src="{{ category.imagePath }}" class="card-img" alt="image_category">
                      <div class="card-img-overlay">
                          <h5 class="card-title">{{ category.name }}</h5>
                          <a href="{{ path('boutique_product_show_by_category',{'id': category.id}) }}" class="btn btn-outline-light w-100">Consulter</a>
                      </div>
                  </div>
          
              </div>
              
          {% endfor %}

      </div>
    </div>
  </section>

  <section>
  <div class="container py-5">
      <div class="row">
        <div class="col-12">
          <h3 class="text-center">Nouveautés</h3>
        </div>  
        <hr>

        {% for product in products %}

            <div class="col-sm-12 col-lg-4 mt-3">
              
             <div class="card bg-dark text-white">
                    <img src="{{ product.imagePath }}" class="card-img" alt="image_category">
                  <div class="card-img-overlay">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p>{{ product.price | priceEuro }}</p>
                        <a href="{{ path('boutique_product_detail',{'id': product.id} ) }}" class="btn btn-outline-light btn-lg w-100">Consulter</a>
                    </div>
                </div>
            </div>
              
            
        {% endfor %}

    </div>
     </div>
  </section>

  
   


{% endblock %}